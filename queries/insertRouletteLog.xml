<query id="insertRouletteLog" action="insert">
    <tables>
        <table name="roulette_log" />
    </tables>
    <columns>
        <column name="log_srl" />
        <column name="module_srl" var="module_srl" default="0" />
        <column name="member_srl" var="member_srl" notnull="notnull" />
        <column name="point_spent" var="point_spent" default="0" />
        <column name="reward_text" var="reward_text" />
        <column name="reward_point" var="reward_point" default="0" />
        <column name="regdate" var="regdate" default="curdate()" />
        <column name="ipaddress" var="ipaddress" />
    </columns>
</query>
